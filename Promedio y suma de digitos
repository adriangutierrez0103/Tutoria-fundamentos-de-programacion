#include <iostream>

using namespace std;

int main() {
    int numero, digito;
    int contador = 0;
    int sumatoria = 0;
    double promedio = 0;
    cout << "Ingresa un numero entero positivo: ";
    cin >> numero;
    while (numero > 0) {
        digito = numero % 10;  
        sumatoria += digito;      
        contador++;          
        numero /= 10;              
    }

    if (contador > 0) {
        promedio = sumatoria / contador;  
        }
    cout << "Cantidad de digitos: " << contador  << endl;
    cout << "Suma de los digitos: " << sumatoria << endl;
    cout << "Promedio de los dÃ­gitos: " << promedio << endl;
    return 0;
}
